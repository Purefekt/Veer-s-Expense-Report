<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Total expense in a month = 296,220 HUF"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="Total monthly income = 318,200 HUF"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Mom = 234,500 HUF ($750)"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Scholarship = 83,700 HUF"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="BALANCE = 21,980 HUF"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="This money is used for the following:"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="1) Spotify monthly subscription"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="2) Google Drive subscription"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="3) Bathroom products (clothes washing powder, handwash, shower gel, shampoo, Deo, tc)"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="4) Kitchen items (ketchup, garbage bags, dish washing soap, etc)"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="5) Eating out, ordering, movies, etc."
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="6) Savings"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:typeface="monospace" />

    </LinearLayout>

</ScrollView>